# RAMESH Agent Configuration
# ==========================
# Copy this file to .env and fill in your values

# ======================================
# OpenAI API Configuration
# ======================================
OPENAI_API_KEY=your-openai-api-key-here

# ======================================
# Supabase Configuration (for shared cloud memory)
# ======================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ======================================
# Z-Library Configuration
# ======================================

# Browser settings
BROWSER_HEADLESS=false  # Set to 'true' for production/server environments
DOWNLOAD_COOLDOWN=40    # Seconds to wait between downloads (rate limiting)

# LLM Configuration
LLM_TIMEOUT=30  # Timeout for LLM API calls in seconds

# Agent settings
MAX_DOWNLOADS_PER_ACCOUNT=9      # Z-Library download limit per account
MAX_CONVERSATION_HISTORY=20      # Prevent memory leak in long conversations

# Z-Library Accounts (JSON array format)
# Copy your accounts.json content here as a single-line JSON string
ZLIB_ACCOUNTS=[{"name":"Account_1","remix_userid":"YOUR_ID","remix_userkey":"YOUR_KEY","daily_limit":9}]

# Z-Library data paths
DATA_FOLDER=data/books
RESOURCES_FILE=data/resources.json

# ======================================
# arXiv Configuration (NEW!)
# ======================================

# arXiv data paths
ARXIV_DATA_FOLDER=data/papers
ARXIV_RESOURCES_FILE=data/arxiv_resources.json

# arXiv rate limiting (respect arXiv servers!)
# API requests: minimum 3 seconds between requests (arXiv guideline)
ARXIV_API_RATE_LIMIT=3.0
# Delay between PDF downloads in seconds
ARXIV_PDF_DELAY=1.0

# arXiv batch settings
# Max results per API query (max 2000 per arXiv guidelines)
ARXIV_MAX_PER_QUERY=100
# Max retries for failed downloads
ARXIV_MAX_RETRIES=3
# Download timeout in seconds
ARXIV_DOWNLOAD_TIMEOUT=120
